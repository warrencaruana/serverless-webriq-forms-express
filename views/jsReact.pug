    } else {
      thankYou += "/thank-you";
    }

    let infoMessage;
    if (document.querySelectorAll('.infoMessage-' + singleFormIndex).length > 0) {
      infoMessage = document.querySelectorAll('.infoMessage-' + singleFormIndex)[0];
    } else {
